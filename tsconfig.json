{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "paths": {
      "utils": ["src/utils/"],
      "shared": ["src/components/shared/*"]
    }
  }
}
